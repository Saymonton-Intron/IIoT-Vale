{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore.Mvc": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.Hosting": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.json",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
                }
            },
            {
                "Name": "Console"
            }
        ]
    },
    "ConnectionStrings": {
        "TimescaleDb": "Host=localhost;Port=5432;Username=postgres;Password=password;Database=tunnel_monitoring"
    },
    "AllowedHosts": "*"
}
